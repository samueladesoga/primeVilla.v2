<% if flash[:alert] %>
  <div class="mb-4 rounded-lg bg-red-100 px-4 py-3 text-red-700 border border-red-300">
    <%= flash[:alert] %>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="mb-4 rounded-lg bg-green-100 px-4 py-3 text-green-700 border border-green-300">
    <%= flash[:notice] %>
  </div>
<% end %>
