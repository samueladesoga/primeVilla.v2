<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
    <thead>
        <tr>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">First Name</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Last Name</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Phone Number</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Parent's Name</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Parent's Phone Number</th>
            <th class="px-6 py-3 border-b-2 border-gray-200 bg-gray-50"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr class="hover:bg-gray-100">
                <td class="px-6 py-4 border-b border-gray-200"><%= user.first_name %></td>
                <td class="px-6 py-4 border-b border-gray-200"><%= user.last_name %></td>
                <td class="px-6 py-4 border-b border-gray-200"><%= user.email_address %></td>
                <td class="px-6 py-4 border-b border-gray-200"><%= user.phone_number %></td>
                <td class="px-6 py-4 border-b border-gray-200"><%= user.parent_name %></td>
                <td class="px-6 py-4 border-b border-gray-200"><%= user.parent_phone_number %></td>
                <td class="px-6 py-4 border-b border-gray-200 flex space-x-2">
                    <%= link_to 'Edit', edit_user_path(user), class: "inline-block px-4 py-2 bg-blue-500 text-orange text-xs font-semibold rounded hover:bg-blue-600" %>
                    <%= link_to 'View', user_path(user), class: "inline-block px-4 py-2 bg-green-500 text-orange text-xs font-semibold rounded hover:bg-green-600" %>
                    <%= button_to 'Delete', user_path(user), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "inline-block px-4 py-2 bg-red-500 text-orange text-xs font-semibold rounded hover:bg-red-600" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>