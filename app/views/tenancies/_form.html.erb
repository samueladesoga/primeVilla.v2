<%= form_with(model: tenancy, local: true, class: "space-y-6 max-w-xl mx-auto p-6 bg-white rounded-xl shadow") do |form| %>
  <% if tenancy.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <h2 class="font-semibold">Please fix the following:</h2>
      <ul class="list-disc list-inside">
        <% tenancy.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, "Tenant", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :user_id, User.all, :id, :name, { prompt: "Select a user" },
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
  </div>

  <div>
    <%= form.label :room_id, "Room", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :room_id, Room.all, :id, :name, { prompt: "Select a room" },
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
  </div>

<div>
  <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
  <%= form.date_field :start_date, class: "mt-1 block w-full", data: { controller: "date-picker" } %>
</div>

<div>
  <%= form.label :end_date, class: "block text-sm font-medium text-gray-700" %>
  <%= form.date_field :end_date, class: "mt-1 block w-full", data: { controller: "date-picker" } %>
</div>


  <div>
    <%= form.label :comments, "Notes", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :comments, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= form.submit class: "inline-flex justify-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>
