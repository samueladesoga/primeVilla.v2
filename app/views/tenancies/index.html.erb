<h1 class="text-2xl font-bold mb-4">Tenancies</h1>

<table class="min-w-full table-auto border-collapse border border-gray-300">
  <thead class="bg-gray-100">
    <tr>
      <th class="border px-4 py-2">Room</th>
      <th class="border px-4 py-2">Tenant</th>
      <th class="border px-4 py-2">Start Date</th>
      <th class="border px-4 py-2">End Date</th>
      <th class="border px-4 py-2">Comments</th>
      <th class="border px-4 py-2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <% latest_tenancy = room.tenancies.order(end_date: :desc).first %>
        <td class="border px-4 py-2"><%= latest_tenancy.nil? ? room.name : latest_tenancy.room&.name %></td>
        <td class="border px-4 py-2"><%= latest_tenancy.nil? ? "Empty" : latest_tenancy.user&.name %></td>
        <td class="border px-4 py-2"><%= latest_tenancy.nil? ? "Empty" : latest_tenancy.start_date %></td>
        <td class="border px-4 py-2"><%= latest_tenancy.nil? ? "Empty" : latest_tenancy.end_date %></td>
        <td class="border px-4 py-2"><%= latest_tenancy.nil? ? "Empty" : latest_tenancy.comments %></td>
        <td class="border px-4 py-2 space-x-2">
          <% unless latest_tenancy.nil? %>
            <%= link_to "Show", room.tenancies.last, class: "text-blue-600 hover:underline" %>
            <%= link_to "Edit", edit_tenancy_path(room.tenancies.last), class: "text-yellow-600 hover:underline" %>
            <%= link_to "Delete", room.tenancies.last, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4"> 
  <%= link_to "New Tenancy", new_tenancy_path, data: { turbo_frame: "modal" }, class: "inline-block px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
</div>


