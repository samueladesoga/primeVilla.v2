<h1 class="text-2xl font-bold mb-4">Rooms</h1>

<div class="w-full">


<div class="border border-gray-200 bg-white rounded-xl overflow-hidden">
  <div class="max-w-full overflow-x-auto custom-scrollbar">
    <table class="w-full min-w-[700px]">
      <thead class="bg-gray-100">
        <tr class="border-b border-gray-100">
          <th class="px-5 py-3 text-left sm:px-6"><p class="font-medium text-black-500 text-theme-xs">Room Name</p></th>
          <th class="px-5 py-3 text-left sm:px-6"><p class="font-medium text-black-500 text-theme-xs">Empty?</p></th>
          <th class="px-5 py-3 text-left sm:px-6"><p class="font-medium text-black-500 text-theme-xs">Actions</p></th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr class="border-b border-gray-100">
            <td class="px-5 py-4 sm:px-6"><%= room.name %></td>
            <td class="px-5 py-4 sm:px-6"><%= room.is_empty %></td>
            <td class="px-5 py-4 sm:px-6 space-x-2">
              <%= link_to "Show", room, class: "text-blue-600 hover:underline" %>
              <%= link_to "Edit", edit_room_path(room), class: "text-yellow-600 hover:underline" %>
              <%= button_to "Destroy", room, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-4"> 
  <%= link_to "New room", new_room_path, class: "inline-block px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
</div>

