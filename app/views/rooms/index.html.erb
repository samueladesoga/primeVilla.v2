<h1 class="text-2xl font-bold mb-4">Rooms</h1>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

<table class="min-w-full table-auto border-collapse border border-gray-300">
  <thead class="bg-gray-100">
    <tr>
      <th class="border px-4 py-2">Room Name</th>
      <th class="border px-4 py-2">Empty?</th>
      <th class="border px-4 py-2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td class="border px-4 py-2"><%= room.name %></td>
        <td class="border px-4 py-2"><%= room.is_empty %></td>
        <td class="border px-4 py-2 space-x-2">
          <%= link_to "Show", room, class: "text-blue-600 hover:underline" %>
          <%= link_to "Edit", edit_room_path(room), class: "text-yellow-600 hover:underline" %>
          <%= button_to "Destroy", room, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4"> 
  <%= link_to "New room", new_room_path, class: "inline-block px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
</div>

